<div class="row">
  <%= f.field_container :name, class: %w[form-group col-md-8] do %>
      <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
      <%= f.text_field :name, required: true, class: 'form-control' %>
  <% end %>

  <%= f.field_container :edit_type, class: %w[form-group col-md-8] do %>
      <%= f.label :edit_type, Spree.t(:edit_type) %> <span class="required">*</span>
      <%= f.select :edit_type,
       options_for_select(Spree::BulkProductSpreadsheetEdit::EDIT_TYPES.map { |type| [type.titleize, type.to_s] }, @bulk_product_spreadsheet_edit.edit_type),
       { include_blank: true },
       { required: true, class: 'form-control' } %>
  <% end %>

  <%= f.field_container :spreadsheet_file, class: %w[form-group col-md-8] do %>
      <%= f.label :spreadsheet_file, Spree.t(:spreadsheet_file) %> <span class="required">*</span>
      <% unless @bulk_product_spreadsheet_edit.spreadsheet_file.nil? %>
          <p style="margin-left: 20px; font-style: italic;"><%= @bulk_product_spreadsheet_edit.spreadsheet_file %></p>
      <% end %>
      <% unless @bulk_product_spreadsheet_edit.state == Spree::BulkProductSpreadsheetEdit::STATE_COMPLETE %>
          <%= f.file_field :spreadsheet_file, required: @bulk_product_spreadsheet_edit.spreadsheet_file.nil?, class: 'form-control' %>
      <% end %>
  <% end %>
</div>
